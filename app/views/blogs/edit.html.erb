<h1>編集ページ</h1>
<%= form_with model: @blog, url: blog_path(@blog.id), method: :patch do |f| %>

 <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <%= f.submit "再投稿する" %>

<% end %>

<%= link_to "詳細を見る", blog_path(@blog.id) %>
<%= link_to "back", blogs_path %>